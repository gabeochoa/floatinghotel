# T5: Toolbar > Push
# Verifies the Push toolbar button attempts a git push.
# No remote configured, so push fails gracefully.
make_test_repo
resize 1280 720
wait_frames 5

# Hide sidebar to show full-width toolbar
click_text "View"
wait_frames 3
click_text "Toggle Sidebar"
wait_frames 5
validate sidebar_visible=false

# Click Push in the toolbar
click_text "Push"
wait_for_refresh

# App should still be responsive
validate branch=main
screenshot t5_01_push_toolbar
