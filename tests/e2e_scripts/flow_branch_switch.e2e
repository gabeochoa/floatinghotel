# Flow: Switch between branches via the Refs sidebar tab
make_test_repo
resize 1280 720
wait_frames 5

# Should be on main branch
validate branch=main
screenshot flow_branch_01_on_main

# Switch to Refs tab
click_button Refs
wait_frames 5
screenshot flow_branch_02_refs_tab

# Click the feature branch to check it out
click_text "feature/add-logging"
wait_for_refresh
screenshot flow_branch_03_on_feature

# Branch should have changed
validate branch=feature/add-logging
