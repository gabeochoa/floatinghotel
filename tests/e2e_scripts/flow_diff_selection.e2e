# Flow: Select different files and verify diff updates
# User clicks through multiple files, ensuring diff view updates each time
make_test_repo
resize 1280 720
wait_frames 5

# Start with no file selected
screenshot flow_diffsel_01_empty_state

# Select first file
click_text "README.md"
wait_frames 5
screenshot flow_diffsel_02_readme

# Select second file — diff should change
click_text "main.cpp"
wait_frames 5
screenshot flow_diffsel_03_maincpp

# Select staged file
click_text ".gitignore"
wait_frames 5
screenshot flow_diffsel_04_gitignore

# Click the same file again — should keep showing same diff (not toggle off)
click_text ".gitignore"
wait_frames 5
screenshot flow_diffsel_05_same_file_reclick
